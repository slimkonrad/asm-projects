; backuprestore.inc
; This file contains macros for the standard function prologue and epilogue
; to save and restore all general-purpose registers as shown in the
; provided isfloat.asm and outputarray.asm files.

%macro backup 0
    push    rbp
    mov     rbp, rsp
    push    rdi
    push    rsi
    push    rdx
    push    rcx
    push    r8
    push    r9
    push    r10
    push    r11
    push    r12
    push    r13
    push    r14
    push    r15
    push    rbx
    pushf
%endmacro

%macro restore 0
    popf
    pop     rbx
    pop     r15
    pop     r14
    pop     r13
    pop     r12
    pop     r11
    pop     r10
    pop     r9
    pop     r8
    pop     rcx
    pop     rdx
    pop     rsi
    pop     rdi
    pop     rbp
%endmacro